# Auth.js (NextAuth v5)
AUTH_SECRET=generate-with-npx-auth-secret
AUTH_URL=http://localhost:3000

# MidOS API — public URL for browser calls (client-side)
NEXT_PUBLIC_MIDOS_API_URL=http://localhost:8420

# GitHub OAuth (https://github.com/settings/developers)
GITHUB_ID=
GITHUB_SECRET=
# Set to "1" to show GitHub login button (requires GITHUB_ID + GITHUB_SECRET)
NEXT_PUBLIC_HAS_GITHUB_AUTH=

# Google OAuth (https://console.cloud.google.com/apis/credentials)
GOOGLE_ID=
GOOGLE_SECRET=
# Set to "1" to show Google login button (requires GOOGLE_ID + GOOGLE_SECRET)
NEXT_PUBLIC_HAS_GOOGLE_AUTH=

# Resend — magic code email service (https://resend.com)
# Leave empty for dev mode (codes printed to backend console)
RESEND_API_KEY=

# Backend API URL — server-to-server only (never exposed to browser)
# In Docker: http://midos-community:8420
BACKEND_URL=http://localhost:8420

# PostgreSQL on VPS (for Auth.js adapter — optional, JSON fallback if not set)
# DATABASE_URL=postgresql://user:pass@your-vps:5432/midos
